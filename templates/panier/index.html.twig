{% extends 'base.html.twig' %}

{% block title %}{{ 'panier.title' }}{% endblock %}

{% block body %}
    <h1>{{ 'panier.title' }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'table.user'|trans }}</th>
                <th>{{ 'table.modif'|trans }}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
                <td>{{ panier.id }}</td>
                <td>{{ panier.user}}</td>
                <td>{{ panier.date ? panier.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_panier_show', {'id': panier.id}) }}">show</a>
                    <a href="{{ path('app_panier_edit', {'id': panier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'table.no_record'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
