{% extends 'base.html.twig' %}

{% block title %}
  Produit index
{% endblock %}

{% block body %}
  <h1>Produits</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Description</th>
        <th>Prix</th>
        <th>Stock</th>
        <th>Photo</th>
        <th>actions</th>
      </tr>
    </thead>
    <tbody>
      {% for produit in produits %}
        <tr>
          <td>
            <a href="{{ path('app_produit_show', { id: produit.id }) }}">{{ produit.nom }}</a>
          </td>

          <td>{{ produit.description }}</td>
          <td>{{ produit.prix }}</td>
          <td>{{ produit.stock }}</td>
          <td>
            <img src="{{ asset('uploads/' ~ produit.photo) }}" alt="{{ produit.nom }}" />
          </td>

          {# <td>
            <a href="{{ path('app_produit_show', { id: produit.id }) }}">show</a>
          </td> #}
        </tr>
      {% else %}
        <tr>
          <td colspan="7">no records found</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_produit_new') }}">Create new</a>
  {% endif %}
{% endblock %}
