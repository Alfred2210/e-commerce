{% extends 'base.html.twig' %}

{% block title %}
    {{ 'produit.title'|trans }}
{% endblock %}

{% block body %}
    <style>
        td img {
            max-width: 150px;
        }

        .img_div {
            display: flex;
            justify-content: center;
            padding: 25px 0;
        }

        .img_div img {
            max-width: 80%;
            max-height: 75vh;
            border-radius: 25px;
            overflow: hidden;
            box-shadow: 1px 1px 2px black;
        }

        .infoProd {
            position: relative;
            max-height: 75vh;
        }

        .infoProd p {
            max-height: 70%;
            overflow-y: scroll;
        }

        .info_prod {
            bottom: 5px;
            left: 0;
            right: 0;
            width: 100%;
        }
    </style>
    {#  <h1>{{ produit.nom }}</h1> #}
    <div class="full-width row">
        <div class="col-8 img_div">
            <img src="{{ asset('uploads/' ~ produit.photo) }}" alt="{{ produit.nom }}"/>
        </div>
        <div class="col-4 infoProd">
            <h2>{{ produit.nom }}</h2>
            <p>
                {{ produit.description }}
            </p>
            <div class="info_prod">
                <div class="row">
                    <p class="col-6">
                        {{ 'table.unit_price'|trans }} : {{ produit.prix }}â‚¬
                    </p>
                    <p class="col-6">
                        {{ 'table.stock'|trans }} : {{ produit.stock }}
                    </p>
                </div>
                <div>
                    {{ include('produit/_add_to_card.html.twig') }}
                </div>

            </div>
        </div>
    </div>


    {% if is_granted('ROLE_MODERATOR') %}
        <div class="admin_btn_edit">
            <a href="{{ path('app_produit_edit', { id: produit.id }) }}"
               class="btn btn-primary">{{ 'admin.edit'|trans }}</a>
            <a href="{{ path('app_produit_delete', { id: produit.id }) }}"
               class="btn btn-danger">{{ 'admin.remove'|trans }}</a>
        </div>
    {% endif %}
{% endblock %}
