{% extends 'base.html.twig' %}

{% block title %}
  Hello UserController!
{% endblock %}

{% block body %}
  <div class="example-wrapper">
    <table class="table">
      <tbody>
        <tr>
          <th>Id</th>
          <td>{{ user.nom }}</td>
        </tr>
        <tr>
          <th>{{ 'user.name'|trans }}</th>
          <td>{{ user.prenom }}</td>
        </tr>
        <tr>
          <th>{{ 'user.email'|trans }}</th>
          <td>{{ user.email }}</td>
        </tr>
      </tbody>
    </table>

    {% if is_granted('ROLE_MODERATOR') %}
      {% for i in user %}
        <div>{{ i.id }}</div>
      {% endfor %}
    {% endif %}
    {{ include('panier/_list.html.twig', { paniers: paniers }) }}
  </div>
{% endblock %}
