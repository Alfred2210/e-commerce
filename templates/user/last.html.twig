{% extends 'base.html.twig' %}

{% block body %}
  {# {{ dump(test) }} #}

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>{{ 'user.last_name'|trans }}</th>
        <th>{{ 'user.name'|trans }}</th>
        <th>{{ 'user.email'|trans }}</th>
      </tr>
    </thead>
    <tbody>
      {% for i in user %}
        <tr>
          <td>{{ i.id }}</td>
          <td>{{ i.nom }}</td>
          <td>{{ i.prenom }}</td>
          <td>{{ i.email }}</td>
        </tr>
      {% else %}
        <tr>
          <td colspan="4">no records found</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
